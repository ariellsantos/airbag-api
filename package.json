{
  "name": "airbag-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "lint": "tslint src/**/*.ts{,x}",
    "test:features": "NODE_ENV=test node ./node_modules/@cucumber/cucumber/bin/cucumber-js",
    "dev": "NODE_ENV=dev ts-node-dev --ignore-watch node_modules ./src/Application/app.ts",
    "prepare": "husky install",
    "build": "npm run build:clean && npm run build:tsc",
    "build:tsc": "tsc -p tsconfig.prod.json",
    "build:clean": "rm -r dist; exit 0",
    "start": "NODE_ENV=production node dist/src/Application/app"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@cucumber/cucumber": "^10.0.1",
    "@cucumber/pretty-formatter": "^1.0.0",
    "@types/convict": "^6.1.6",
    "@types/express": "^4.17.21",
    "@types/express-promise-router": "^3.0.0",
    "@types/node": "^20.9.0",
    "@types/supertest": "^2.0.16",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^5.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,tests}/**/*.ts": [
      "prettier --write ",
      "tslint --fix"
    ]
  },
  "dependencies": {
    "awilix": "^9.0.0",
